<script>
  // Espera a que el documento esté completamente cargado
  $(document).ready(function() {
      $("#main").hide().slideDown(1000); // 1000 representa la duración de la animación en milisegundos (1 segundo en este caso)
  });

  $(document).ready(function() {
        $(window).scroll(function() {
            var windowHeight = $(window).height();
            var scrollHeight = $(window).scrollTop();
            var statisticsSectionTop = $('.statistics-cards').offset().top;

            if (scrollHeight + windowHeight > statisticsSectionTop) {
                $('.statistics-cards').css({
                    'opacity': '1',
                    'visibility': 'visible'
                });
            }
        });
    });
</script>
